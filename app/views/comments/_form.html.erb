<%= form_for [topic, post, comment] do |f| %>
  <%= form_group_tag(post.errors[:body]) do %>
    <%= f.label :body, 'Please think before you comment'%>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter your comment BODY here, and please be nice" %>
  <% end %>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>